<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control 
      namespace="PowerApps.PCF.Controls" 
      constructor="TreeView" 
      version="0.0.1" 
      display-name-key="TreeView" 
      description-key="TreeView description" 
      control-type="react">

    <type-group name="treeItems">
      <type>SingleLine.Text</type>
      <type>Whole.None</type>
      <type>TwoOptions</type>
    </type-group>

    <!-- Dataset definition -->
    <data-set name="items" display-name-key="Items">
      <property-set name="itemKey" display-name-key="Item Key" description-key="" of-type="SingleLine.Text" usage="bound" required="true" />
      <property-set name="itemLabel" display-name-key="Item Label" description-key="" of-type="SingleLine.Text" usage="bound" required="true" />
      <property-set name="itemParentKey" display-name-key="Item Parent Key" description-key="" of-type="SingleLine.Text" usage="bound" required="false" />
      <property-set name="itemTooltip" display-name-key="Item Tooltip" description-key="" of-type="SingleLine.Text" usage="bound" required="false" />
      <property-set name="isSelected" display-name-key="Is Selected" description-key="" of-type="TwoOptions" usage="bound" required="false" />
    </data-set>

    <!-- Input properties -->
    <property name="buttonSize" display-name-key="Button Size" of-type="Enum" usage="input" required="true" default-value="medium">
      <value name="small" display-name-key="small">small</value>
      <value name="medium" display-name-key="medium">medium</value>
      <value name="large" display-name-key="large">large</value>
    </property>
    <property name="treeSize" display-name-key="Tree Size" of-type="Enum" usage="input" required="true" default-value="medium">
      <value name="small" display-name-key="small">small</value>
      <value name="medium" display-name-key="medium">medium</value>
    </property>
    <property name="fontSize" display-name-key="Font Size" of-type="Whole.None" usage="input" required="false" />

  <!-- Output properties (only selectedKeys kept) -->
  <property name="selectedKeys" display-name-key="Selected Keys" of-type="SingleLine.Text" usage="output" required="false" />
  <property name="selectedState" display-name-key="Selected State" of-type="SingleLine.Text" usage="output" required="false" />
  <property name="changedRows" display-name-key="Changed Rows" of-type="SingleLine.Text" usage="output" required="false" />

    <resources>
      <code path="index.ts" order="1" />
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
    </resources>

  </control>
</manifest>
